<script>
    // timer
    const timerElement = document.getElementById('timer');

   
    let time = 60;

    // Update the timer every second
    const timer = setInterval(() => {
      
        timerElement.textContent = time;

       
        time--;

        
        if (time === 0) {
           
            clearInterval(timer);
            timerElement.textContent = '60';
           //refreshing the page
            location.reload();
        }
    }, 1000); 

</script>

